{
  "name": "daydiff",
  "version": "1.0.0",
  "description": "Daily data diff reporter - fetches datasets, stores snapshots, computes diffs, and serves a dashboard",
  "type": "module",
  "bin": {
    "daydiff": "./src/cli.mjs"
  },
  "scripts": {
    "start": "node --max-old-space-size=8192 src/cli.mjs run",
    "fetch": "node --max-old-space-size=8192 src/cli.mjs fetch",
    "diff": "node src/cli.mjs diff",
    "dashboard": "node src/cli.mjs dashboard",
    "dev": "concurrently \"DASHBOARD_SKIP_OPEN=1 node src/cli.mjs dashboard\" \"npm run dev --prefix dashboard\"",
    "status": "node src/cli.mjs status",
    "build:dashboard": "npm run build --prefix dashboard",
    "test": "node --test test/*.test.mjs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "openai": "^6.22.0",
    "undici": "^7.21.0"
  }
}
