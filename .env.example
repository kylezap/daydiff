# ===========================================
# DayDiff Configuration
# Copy this file to .env and fill in values
# ===========================================

# --- DevGrid API Configuration ---
API_BASE_URL=https://prod.api.devgrid.io
API_KEY=your-devgrid-api-key-here
# Auth type must be ApiKey for DevGrid (sends x-api-key header)
API_AUTH_TYPE=ApiKey

# --- Proxy Configuration ---
# Set if behind a corporate proxy
# HTTPS_PROXY=http://proxy.corp.example.com:8080
# HTTP_PROXY=http://proxy.corp.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# --- SSL / TLS Configuration ---
# Path to custom CA certificate bundle (PEM format)
# Required if corporate proxy performs TLS inspection
# CA_CERT_PATH=/path/to/corporate-ca-bundle.pem
# Set to false ONLY as a last resort (will log a warning)
STRICT_SSL=true

# --- Dashboard ---
DASHBOARD_PORT=3000

# --- Scheduling ---
# Time for daily launchd job (24h format)
SCHEDULE_HOUR=6
SCHEDULE_MINUTE=0
